Algoritmo "Area do Triangulo_2"

Var
      b, h, resultado : Real


Inicio

      escreva ("Digite a Base do triangulo: ")
      leia (b)
      escreva ("Digite a Altura do triangulo: ")
      leia (h)
      resultado <- b*h/2
      escreval ("A area do Triangulo é: ", resultado, " M²", "(Metros Quadrados)")
      


Fimalgoritmo